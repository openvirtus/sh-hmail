#L:  WITH THE SOFTWARE OR THE USE OR OTHER DEALINGS IN THE SOFTWARE.
#L:
#h: Usage: $0 [FLAGS...] [USER@[DOMAIN]]
#h:
#h: -m : Get mail exchanger MX field.
#h: -M : Get mail provider.
#h: -t : Send test mail.
#::
#i: nslookup
#i:    xbps: bind-utils
hmail_test() {
    ## Parse command line arguments.
    local OPTIND optopt= ops=
    while getopts "mMt" optopt;do # OPTARG
        local ops="${ops}${optopt}"
        case $optopt in
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    ## Get mail account.
    case "$1" in
        '')  local email=""           domain=""                              ;;
        *@*) local email="${1}"       domain="`echo "${1}" | sed 's|.*@||'`" ;;
        *)   local email="admin@${1}" domain="${1}"                          ;;
    esac
    ## Operations.
    case "${ops}" in
        *m*) if test ! -n "${domain}";then
                 echo "hmail-test: error: Please specify a domain." >&2
                 exit 1
             fi
             hmail_test_get_mail_mx "${domain}";;
        *M*) if test ! -n "${domain}";then
                 echo "hmail-test: error: Please specify an email account." >&2
                 exit 1
             fi
             hmail_test_get_mail_provider "${email}";;
        *t*) if test ! -n "${email}";then
                 echo "hmail-test: error: Please specify an email account." >&2
                 exit 1
             fi
             echo "Sending a mail ..."
             echo "Test message." | mailx -s "Test mail" "${email}" 
             echo "Mail sent ."
             ;;
    esac
}

## -----------------------------------------------------------------------------------
hmail_test_get_mail_mx() {
    local arg=
    for arg in "$@";do
        LANG=en nslookup <<EOF | sed -n 's|.*mail exchanger = [0-9]* \(.*\)\.$|\1|p'
set type=mx
`echo "${arg}" | sed 's|.*@||'`
EOF
    done
}
hmail_test_get_mail_provider() {
    hmail_test_get_mail_mx "$1" | sed -n 's|.*\.\([^.]*\.[^.]*\)$|\1|p' | sort | uniq
}









## ----------------------------------------------------------------------------------
if test @"`basename "$0"`" = @"hmail-test";then
    if test -n "$1";then
        hmail_test "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi
